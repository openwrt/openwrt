#CPU=mips

OS=linux

ifeq ($(KVER),$(filter 3.14%,$(KVER)))
OS_VER=3_14
endif

ifeq ($(KVER),$(filter 4.4%,$(KVER)))
OS_VER=4_4
endif

ifeq ($(KVER),$(filter 4.1%,$(KVER)))
OS_VER=4_1
endif

ifeq ($(KVER),$(filter 4.9%,$(KVER)))
OS_VER=4_9
endif

ifeq ($(KVER),$(filter 5.4%,$(KVER)))
OS_VER=5_4
endif

ifeq ($(KVER), 3.4.0)
OS_VER=3_4
endif

ifeq ($(KVER), 3.18)
OS_VER=3_18
endif

ifeq ($(KVER), 3.18.21)
OS_VER=3_18
endif

ifeq ($(KVER), 3.4.103)
OS_VER=3_4
endif

ifeq ($(KVER), 3.3.8)
OS_VER=3_2
endif

ifeq ($(ARCH), arm)
BOARD=ipq806x
endif

ifeq ($(ARCH), mips)
BOARD=ar71xx
endif

ifeq ($(BOARD), ar71xx)
BOARD_NAME=BOARD_AR71XX
endif

ifeq ($(BOARD), ipq806x)
BOARD_NAME=BOARD_IPQ806X
endif

OS_SUB=31

ifndef OS_VER
OS_VER=2_6
endif
