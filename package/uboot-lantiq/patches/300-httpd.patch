+	byte_size = rsa->num_octets; 
+	dat_bi = bi_import(rsa->bi_ctx, buffer_in, byte_size);
+	rsa->bi_ctx->mod_offset = BIGINT_M_OFFSET;
+	bi_copy(rsa->m);
+	decrypted_bi = bi_mod_power(rsa->bi_ctx, dat_bi, rsa->e);
