+FONRSA_ERROR FR_verify_file(void *handler, char *file_data, int file_len,
+	char *signature_buffer, int signature_size)
+{
+	int j;
+	byte *hashcode;
+	byte hash[20];
+	uint8_t *decrypted;
+	RSA_parameters *rsa_parameters = (RSA_parameters *)handler;
