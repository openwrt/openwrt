+{
+#ifndef WIN32
+	va_list ap;
+	char buffer[4096];
+	int n;
+
+	va_start(ap, message);
+	n = vsnprintf(buffer, MAX_LOG_STRING, message, ap);
+	va_end(ap);
+	if (n > -1 && n < MAX_LOG_STRING)
+		fslog.function(loglevel, buffer);
+	else
+		fon_critical("%s: Message too big to be logged", __FUNCTION__);
+#else
+	return;
+#endif
+}
