+void bi_permanent(bigint *bi)
+{
+    check(bi);
+    if (bi->refs != 1)
+    {
+		printf("%s:%s[%d]\n", __FILE__, __func__, __LINE__);
+		printf("%s:%s[%d]\n", __FILE__, __func__, __LINE__);
+		printf("%s:%s[%d]\n", __FILE__, __func__, __LINE__);
+		return;
+	}
+
