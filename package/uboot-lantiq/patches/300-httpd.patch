+	strncpy(fslog.domain, domain, MAX_LG_DOMAIN);
+	fslog.domain[MAX_LG_DOMAIN - 1] = '\0';
+	fslog.watermark = watermark;
+	fslog.mode = mode;
+	fslog.function = log_function?log_function:LG_log_string;
+	if (fslog.mode & LG_SYSLOG)
