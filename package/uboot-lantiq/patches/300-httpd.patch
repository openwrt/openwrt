+/**
+ * Perform an integer divide on a bigint.
+ */
+static bigint *bi_int_divide(BI_CTX *ctx, bigint *biR, comp denom)
+{
+    int i = biR->size - 1;
+    long_comp r = 0;
+
+    check(biR);
+
+	do
+    {
+		r = (r<<COMP_BIT_SIZE) + biR->comps[i];
+		//biR->comps[i] = (comp)(r / denom);
+		long_comp x = r; do_div(x, denom); biR->comps[i] = x;
+/*		while(r > denom)
+		{
+			r -= denom;
+		}*/
+		r%=denom;
+	} while (--i != 0);
+
+    return trim(biR);
+}
