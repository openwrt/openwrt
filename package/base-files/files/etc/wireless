#!/bin/sh

# Get the default wireless device
WIFI_DEV="$(uci get wireless.@wifi-iface[0].device)"

# Delete existing guest wireless configuration
uci -q delete wireless.guest

# Configure guest wireless interface
uci set wireless.guest="wifi-iface"
uci set wireless.guest.device="${WIFI_DEV}"
uci set wireless.guest.mode="ap"
uci set wireless.guest.network="guest"
uci set wireless.guest.ssid="guest"
uci set wireless.guest.encryption="none"

# Commit changes and reload wireless
uci commit wireless
wifi reload
