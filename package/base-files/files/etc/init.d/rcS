${FAILSAFE:+exit}

# FIXME: add logging configuration
#[ -f /etc/config/network ] && . /etc/config/network
#eval $(ipcalc "$log_ipaddr")
#[ "$log_ipaddr" = "$IP" ] || log_ipaddr=""
syslogd -C 16 #${log_ipaddr:+-L -R $log_ipaddr}
klogd

(
	for i in /etc/rc.d/S*; do
		$i boot 2>&1
	done 
	
	sysctl -p >&-
) | logger -s -p 6 -t '' &
