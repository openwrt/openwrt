
config sms_tool 'general'
        option prefix '1'
        option sendport '/dev/ttyUSB2'
        option ussdport '/dev/ttyUSB2'
        option atport '/dev/ttyUSB2'
        option readport '/dev/ttyUSB2'
        option storage 'ME'
        option pnumber '86'
        option mergesms '1'
        option information '0'
        option algorithm 'Advanced'
        option direction 'Start'