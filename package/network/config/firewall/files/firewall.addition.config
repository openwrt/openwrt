# WAN1 Zone (VLAN 100 on lan4)
config zone
	option name 'wan1_zone'
	option network 'wan1'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option masq '1'
	option mtu_fix '1'
	option family 'ipv4&ipv6'

config forwarding
	option src 'lan'
	option dest 'wan1_zone'

# WAN16 Zone (VLAN 200 on lan4, IPv6 only)
config zone
	option name 'wan16_zone'
	option network 'wan16'
	option input 'REJECT'
	option output 'ACCEPT'
	option forward 'REJECT'
	option masq '1'
	option mtu_fix '1'
	option family 'ipv6'

config forwarding
	option src 'lan'
	option dest 'wan16_zone'

# 允许 ICMPv6 流量
config rule
	option name 'allow-icmpv6-wan1'
	option src 'wan1_zone'
	option proto 'icmp'
	option icmp_type 'echo-request'
	option family 'ipv6'
	option target 'ACCEPT'

config rule
	option name 'allow-icmpv6-wan16'
	option src 'wan16_zone'
	option proto 'icmp'
	option icmp_type 'echo-request'
	option family 'ipv6'
	option target 'ACCEPT'

