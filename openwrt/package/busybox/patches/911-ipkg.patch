+     for (i = 0 ; i < pkgs_to_install->len; i++ ) {
+	  pkg_t *pkg = pkgs_to_install->pkgs[i];
+	  pkg_t *old_pkg = pkg->old_pkg;
+
+	  err = prerm_upgrade_old_pkg(conf, pkg, old_pkg);
+	  if (err) return err;
+
+	  err = prerm_deconfigure_conflictors(conf, pkg, replacees);
+	  if (err) return err;
