+	  struct pkg p1, p2;
+	  parseVersion(&p1, argv[0]); 
+	  parseVersion(&p2, argv[2]); 
+	  return pkg_version_satisfied(&p1, &p2, argv[1]);
+     } else {
+	  ipkg_message(conf, IPKG_ERROR,
+		       "ipkg compare_versions <v1> <op> <v2>\n"
+		       "<op> is one of <= >= << >> =\n");
+	  return -1;
+     }
+}
