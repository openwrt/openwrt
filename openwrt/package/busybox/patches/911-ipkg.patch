+{
+    free(dest->name);
+    dest->name = NULL;
+
+    free(dest->root_dir);
+    dest->root_dir = NULL;
+
+    free(dest->ipkg_dir);
+    dest->ipkg_dir = NULL;
+
+    free(dest->lists_dir);
+    dest->lists_dir = NULL;
+
+    free(dest->info_dir);
+    dest->info_dir = NULL;
+
+    free(dest->status_file_name);
+    dest->status_file_name = NULL;
+
+    free(dest->status_file_tmp_name);
+    dest->status_file_tmp_name = NULL;
+
+    if (dest->status_file) {
+	fclose(dest->status_file);
+    }
+    dest->status_file = NULL;
+
+    dest->root_dir = NULL;
+}
