+{
+     int i;
+     pkg_vec_t *conflicts = NULL;
+     int level;
+     const char *prefix;
+     if (conf->force_depends) {
+	  level = IPKG_NOTICE;
+	  prefix = "Warning";
+     } else {
+	  level = IPKG_ERROR;
+	  prefix = "ERROR";
+     }
