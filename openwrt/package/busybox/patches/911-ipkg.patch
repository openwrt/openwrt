+void free_error_list(struct errlist **errors){
+  struct errlist *current = *errors;
+
+    while (current != NULL) {
+      free(current->errmsg);
+      current = (*errors)->next;
+      free(*errors);
+      *errors = current;
+    }
+
+
+}
