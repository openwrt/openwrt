+
+     /* Backup all modified conffiles */
+     if (old_pkg) {
+	  for (iter = old_pkg->conffiles.head; iter; iter = iter->next) {
+	       char *cf_name;
+	       
+	       cf = iter->data;
+	       cf_name = root_filename_alloc(conf, cf->name);
