+		args_usage (NULL);
+	}
+
+	err = ipkg_cmd_exec (cmd, &ipkg_conf, argc - optind, (const char **) (argv + optind), NULL);
+
+	ipkg_conf_deinit (&ipkg_conf);
+
+	return err;
