+int pkg_version_satisfied(pkg_t *it, pkg_t *ref, const char *op)
+{
+     int r;
+
+     r = pkg_compare_versions(it, ref);
+
+     if (strcmp(op, "<=") == 0 || strcmp(op, "<") == 0) {
+	  return r <= 0;
+     }
+
+     if (strcmp(op, ">=") == 0 || strcmp(op, ">") == 0) {
+	  return r >= 0;
+     }
+
+     if (strcmp(op, "<<") == 0) {
+	  return r < 0;
+     }
+
+     if (strcmp(op, ">>") == 0) {
+	  return r > 0;
+     }
+
+     if (strcmp(op, "=") == 0) {
+	  return r == 0;
+     }
+
+     fprintf(stderr, "unknown operator: %s", op);
+     return 0;
+}
