+     if (conflicts) {
+	  ipkg_message(conf, level,
+		       "%s: The following packages conflict with %s:\n\t", prefix, pkg->name);
+	  i = 0;
+	  while (i < conflicts->len)
+	       ipkg_message(conf, level, " %s", conflicts->pkgs[i++]->name);
+	  ipkg_message(conf, level, "\n");
+	  pkg_vec_free(conflicts);
