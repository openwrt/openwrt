#!/bin/sh
[ -e /etc/config/network] && . /etc/config/network
case "$1" in
  start|restart)
    ifup lan
    ifup wan
    ifup wifi
    wifi up

    for route in $(nvram get static_route); do {
      eval "set $(echo $route | sed 's/:/ /g')"
      $DEBUG route add -net $1 netmask $2 gw $3 metric $4 dev $5
    } done
    ;;
esac
