+static int ixp_eth_change_mtu(struct net_device *dev, int mtu)
+{
+	int ret;
+
+	if (mtu > MAX_MRU)
+		return -EINVAL;
+
+	if (dev->flags & IFF_UP) {
+		ret = eth_do_change_mtu(dev, mtu);
+		if (ret < 0)
