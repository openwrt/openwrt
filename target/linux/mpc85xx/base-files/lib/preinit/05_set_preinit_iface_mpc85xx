mpc85xx_set_preinit_iface() {
	case $(board_name) in
	aerohive,br200-wp|\
	ocedo,panda|\
	tplink,tl-wdr4900-v1)
		ifname=lan1
		;;
	aerohive,hiveap-330|\
	enterasys,ws-ap3715i|\
	watchguard,firebox-t10|\
	watchguard,firebox-t15)
		ifname=eth1
		;;
	watchguard,xtm330)
		ifname=port1
		;;
	*)
		ifname=eth0
		;;
	esac
}

boot_hook_add preinit_main mpc85xx_set_preinit_iface
