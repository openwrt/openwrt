#include "qca953x.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/leds/common.h>

/ {
	model = "Wallys DR531";
	compatible = "wallys,dr531", "qca,qca9531";

	aliases {
		label-mac-device = &eth1;
		led-boot = &led_sig4;
		led-failsafe = &led_sig4;
		led-upgrade = &led_sig4;
	};

	beeper {
		compatible = "gpio-beeper";
		gpios = <&gpio 4 GPIO_ACTIVE_HIGH>;
	};

	keys {
		compatible = "gpio-keys";

		reset {
			label = "reset";
			linux,code = <KEY_RESTART>;
			gpios = <&gpio 17 GPIO_ACTIVE_LOW>;
			debounce-interval = <60>;
		};
	};

	leds {
		compatible = "gpio-leds";

		lan {
			function = LED_FUNCTION_LAN;
			color = <LED_COLOR_ID_GREEN>;
			gpios = <&gpio 14 GPIO_ACTIVE_LOW>;
		};

		led_sig4: sig4 {
			label = "green:sig4";
			gpios = <&gpio 13 GPIO_ACTIVE_LOW>;
		};

		sig1 {
			label = "green:sig1";
			gpios = <&gpio 12 GPIO_ACTIVE_LOW>;
		};

		sig2 {
			label = "green:sig2";
			gpios = <&gpio 16 GPIO_ACTIVE_LOW>;
		};

		sig3 {
			label = "green:sig3";
			gpios = <&gpio 15 GPIO_ACTIVE_LOW>;
		};

		wan {
			function = LED_FUNCTION_WAN;
			color = <LED_COLOR_ID_GREEN>;
			gpios = <&gpio 11 GPIO_ACTIVE_LOW>;
		};
	};
};

&eth0 {
	status = "okay";

	phy-handle = <&swphy4>;
	nvmem-cells = <&macaddr_env_f818>;
	nvmem-cell-names = "mac-address";
};

&eth1 {
	/* Workaround: keep the Ethernet interfaces order/mapping correct
	 * (GMAC0 -> eth0, GMAC1 -> eth1, same as in old ar71xx target) */
	compatible = "qca,qca9530-eth", "syscon", "simple-mfd";

	nvmem-cells = <&macaddr_env_f810>;
	nvmem-cell-names = "mac-address";
};

&pcie0 {
	status = "okay";
};

&spi {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;
		m25p,fast-read;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "u-boot";
				reg = <0x000000 0x030000>;
				read-only;
			};

			env: partition@30000 {
				label = "u-boot-env";
				reg = <0x030000 0x010000>;

				nvmem-layout {
					compatible = "fixed-layout";
					#address-cells = <1>;
					#size-cells = <1>;

					macaddr_env_f810: macaddr@f810 {
						reg = <0xf810 0x6>;
					};

					macaddr_env_f818: macaddr@f818 {
						reg = <0xf818 0x6>;
					};
				};
			};

			partition@40000 {
				label = "partition-table";
				reg = <0x040000 0x010000>;
				read-only;
			};

			partition@50000 {
				compatible = "denx,uimage";
				label = "firmware";
				reg = <0x050000 0x7a0000>;
			};

			partition@7f0000 {
				label = "art";
				reg = <0x7f0000 0x010000>;
				read-only;

				nvmem-layout {
					compatible = "fixed-layout";
					#address-cells = <1>;
					#size-cells = <1>;

					cal_art_1000: calibration@1000 {
						reg = <0x1000 0x440>;
					};
				};
			};
		};
	};
};

&usb0 {
	status = "okay";
};

&usb_phy {
	status = "okay";
};

&wmac {
	status = "okay";

	nvmem-cells = <&cal_art_1000>;
	nvmem-cell-names = "calibration";
};
