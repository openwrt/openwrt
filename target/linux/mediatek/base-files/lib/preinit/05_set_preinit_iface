set_preinit_iface() {
	case $(board_name) in
	smartrg,sdg-8622|\
	smartrg,sdg-8632)
		ip link set lan up
		ifname=lan
		;;
	glinet,gl-mt3000)
		ip link set eth1 up
		ifname=eth1
		;;
	ubnt,unifi-6-lr)
		ip link set eth0 up
		ifname=eth0
		;;
	*)
		ip link set eth0 up
		ifname=lan1
		;;
	esac
}

boot_hook_add preinit_main set_preinit_iface

