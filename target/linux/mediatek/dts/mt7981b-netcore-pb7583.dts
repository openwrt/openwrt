/dts-v1/;

#include "mt7981b-netcore-common.dtsi"

/ {
    compatible = "netcore,nx30v2", "mediatek,mt7981";
		
		leds{
			compatible = "gpio-leds";

			led_system: system {
				label = "blue:system";
				gpios = <&pio 7 GPIO_ACTIVE_LOW>;
				default-state = "on";
				linux,default-trigger = "none";
			};

			led_wan: wan {
				label = "blue:wan";
				gpios = <&pio 8 GPIO_ACTIVE_LOW>;
				linux,default-trigger = "netdev";
			};
		};
	};

&switch {
	ports {
		port@0 {
			reg = <1>;
			label = "lan1";
			status = "ok";
		};

		port@1 {
			reg = <2>;
			label = "lan2";
			status = "ok";
		};

		port@2 {
			reg = <3>;
			label = "lan3";
			status = "ok";
		};
	};
};
