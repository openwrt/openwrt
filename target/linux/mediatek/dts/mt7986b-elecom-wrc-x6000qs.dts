/dts-v1/;

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/leds/common.h>
#include <dt-bindings/pinctrl/mt65xx.h>

#include "mt7986b.dtsi"

/ {
	model = "ELECOM WRC-X6000QS";
	compatible = "elecom,wrc-x6000qs", "mediatek,mt7986b";
	
	aliases {
		serial0 = &uart0;
		
		label-mac-device = &gmac0;
		led-boot = &led_power_g;
		led-failsafe = &led_power_r;
		led-running = &led_power_g;
		led-upgrade = &led_power_g;
	};
	
	chosen {
		stdout-path = "serial0:115200n8";
	};
	
	leds {
		compatible = "gpio-leds";
		
		led_wps_r: led-0 {
			function = LED_FUNCTION_WPS;
			color = <LED_COLOR_ID_RED>;
			gpios = <&pio 10 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
		
		led_power_r: led-1 {
			color = <LED_COLOR_ID_RED>;
			function = LED_FUNCTION_POWER;
			gpios = <&pio 22 GPIO_ACTIVE_LOW>;
		};
		
		led_power_g: led-2 {
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_POWER;
			gpios = <&pio 18 GPIO_ACTIVE_LOW>;
		};
		
		led_power_b: led-3 {
			color = <LED_COLOR_ID_BLUE>;
			function = LED_FUNCTION_POWER;
			gpios = <&pio 9 GPIO_ACTIVE_LOW>;
		};
		
		led_power_w: led-4 {
			color = <LED_COLOR_ID_WHITE>;
			function = LED_FUNCTION_POWER;
			gpios = <&pio 20 GPIO_ACTIVE_LOW>;
		};
		
		led_2g_r: led-5 {
			color = <LED_COLOR_ID_RED>;
			function = LED_FUNCTION_WLAN_2GHZ;
			gpios = <&pio 15 GPIO_ACTIVE_LOW>;
		};
		
		led_2g_g: led-6 {
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_WLAN_2GHZ;
			gpios = <&pio 1 GPIO_ACTIVE_LOW>;
		};
		
		led_2g_w: led-7 {
			color = <LED_COLOR_ID_WHITE>;
			function = LED_FUNCTION_WLAN_2GHZ;
			gpios = <&pio 13 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "phy0tpt";
		};
		
		led_5g_r: led-8 {
			color = <LED_COLOR_ID_RED>;
			function = LED_FUNCTION_WLAN_5GHZ;
			gpios = <&pio 12 GPIO_ACTIVE_LOW>;
		};
		
		led_5g_g: led-9 {
			color = <LED_COLOR_ID_GREEN>;
			function = LED_FUNCTION_WLAN_5GHZ;
			gpios = <&pio 2 GPIO_ACTIVE_LOW>;
		};
		
		led_5g_w: led-10 {
			color = <LED_COLOR_ID_WHITE>;
			function = LED_FUNCTION_WLAN_5GHZ;
			gpios = <&pio 14 GPIO_ACTIVE_LOW>;
			linux,default-trigger = "phy1tpt";
		};
	};
	
	keys {
		compatible = "gpio-keys";
		
		switch-ap {
			label = "ap";
			gpios = <&pio 7 GPIO_ACTIVE_LOW>;
			linux,code = <BTN_0>;
		};
		
		button-reset {
			label = "reset";
			gpios = <&pio 11 GPIO_ACTIVE_HIGH>;
			linux,code = <KEY_RESTART>;
		};
		
		button-wps {
			label = "wps";
			gpios = <&pio 16 GPIO_ACTIVE_HIGH>;
			linux,code = <KEY_WPS_BUTTON>;
		};
		
		switch-router {
			label = "router";
			gpios = <&pio 19 GPIO_ACTIVE_LOW>;
			linux,code = <BTN_1>;
		};
	};
	
	memory {
		device_type = "memory";
		reg = <0x00 0x40000000 0x00 0x20000000>;
	};
	
	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;
		
		/* Security Monitor - keeps the bootloader/ARM Trusted Firmware safe */
		secmon_reserved: secmon@43000000 {
			reg = <0x00 0x43000000 0x00 0x30000>;
			no-map;
		};
		
		/* Main Wi-Fi CPU workspace - This fixes the Semaphore error */
		wmcpu_reserved: wmcpu-reserved@4fc00000 {
			reg = <0x00 0x4fc00000 0x00 0x100000>;
			no-map;
		};
	};	
};

&trng {
	status = "okay";
};

&uart0 {
	status = "okay";
};

&watchdog {
	status = "okay";
};

&pio {
	spi_flash_pins: spi-flash-pins-33-to-38 {
		
		mux {
			function = "flash";
			groups = "spi0", "spi0_wp_hold";
		};
		
		conf-pu {
			pins = "SPI2_CS", "SPI2_HOLD", "SPI2_WP";
			drive-strength = <8>;
			bias-disable;
		};
		
		conf-pd {
			pins = "SPI2_CLK", "SPI2_MOSI", "SPI2_MISO";
			drive-strength = <8>;
			bias-disable;
		};
		
		wf_2g_5g_pins: wf-2g-5g-pins {
			mux {
				function = "wifi";
				groups = "wf_2g", "wf_5g";
			};
		};
	};
};

&eth {
	status = "okay";
	mediatek,sgmiisys = <&sgmiisys0 &sgmiisys1>;
	
	gmac0: mac@0 {
		compatible = "mediatek,eth-mac";
		reg = <0>;
		phy-mode = "2500base-x";
		
		nvmem-cells = <&macaddr_factory_2a>;
		nvmem-cell-names = "mac-address";
		
		fixed-link {
			speed = <2500>;
			full-duplex;
			pause;
		};
	};
	
	gmac1: mac@1 {
		compatible = "mediatek,eth-mac";
		reg = <1>;
		status = "okay";
		phy-mode = "2500base-x";
		phy-handle = <&phy5>;
		
		nvmem-cells = <&macaddr_factory_24>;
		nvmem-cell-names = "mac-address";
	};
	
	mdio: mdio-bus {
		#address-cells = <1>;
		#size-cells = <0>;
		
		reset-gpios = <&pio 6 GPIO_ACTIVE_LOW>;
		reset-delay-us = <600>;
		reset-post-delay-us = <20000>;
		
		phy5: phy@5 {
			compatible = "ethernet-phy-ieee802.3-c45";
			reg = <5>;
			max-speed = <2500>;
		};
		
		phy6: phy@6 {
			compatible = "ethernet-phy-ieee802.3-c45";
			reg = <6>;
		};
		
		switch@1f {
			compatible = "mediatek,mt7531";
			reg = <31>;
			reset-gpios = <&pio 5 GPIO_ACTIVE_HIGH>;
			
			interrupt-controller;
			#interrupt-cells = <1>;
			interrupt-parent = <&pio>;
			interrupts = <66 IRQ_TYPE_LEVEL_HIGH>;
			
			ports {
				#address-cells = <1>;
				#size-cells = <0>;
				
				port@0 {
					reg = <0>;
					label = "lan1";
				};
				
				port@1 {
					reg = <1>;
					label = "lan2";
				};
				
				port@2 {
					reg = <2>;
					label = "lan3";
				};
				
				port@3 {
					reg = <3>;
					label = "lan4";
				};
				
				port@6 {
					reg = <6>;
					ethernet = <&gmac0>;
					phy-mode = "2500base-x";
					fixed-link {
						speed = <2500>;
						full-duplex;
						pause;
					};
				};
			};
		};
	};
};

&spi0 {
	status = "okay";
	num-cs = <2>;
	cs-gpios = <0>, <0>;
	
	flash@1 {
		compatible = "spi-nand";
		reg = <1>;
		
		spi-max-frequency = <20000000>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		
		mediatek,nmbm;
		mediatek,bmt-max-ratio = <1>;
		mediatek,bmt-max-reserved-blocks = <64>;
		mediatek,bmt-remap-range =
			<0x0000000 0x5a0000>, /*     BL2 - Fwheader  (5.625 MiB) */
			<0x37a0000 0x3a0000>, /*  Config - Fwheader2 (3.625 MiB) */
			<0x6d40000 0x840000>; /* Config2 - Backup    (8.25 MiB) */
			
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <0x01>;
			#size-cells = <0x01>;
			
			partition@0 {
				label = "BL2";
				reg = <0x00 0x100000>;
				read-only;
			};
			
			partition@100000 {
				label = "Ubootenv";
				reg = <0x100000 0x80000>;
			};
			
			partition@180000 {
				label = "Factory";
				reg = <0x180000 0x200000>;
				read-only;
				
				nvmem-layout {
					compatible = "fixed-layout";
					#address-cells = <1>;
					#size-cells = <1>;
					
					eeprom_factory_0: eeprom@0 {
						reg = <0x0 0x1000>;
					};
					
					macaddr_factory_4: mac-address@4 {
						reg = <0x4 0x6>;
					};
					
					macaddr_factory_a: mac-address@a {
						reg = <0xa 0x6>;
					};
					
					macaddr_factory_24: mac-address@24 {
						reg = <0x24 0x6>;
					};
					
					macaddr_factory_2a: mac-address@2a {
						reg = <0x2a 0x6>;
					};
				};
			};
			
			partition@380000 {
				label = "FIP";
				reg = <0x380000 0x200000>;
				read-only;
			};
			
			partition@580000 {
				label = "Fwheader";
				reg = <0x580000 0x20000>;
				read-only;
			};
			
			partition@5a0000 {
				compatible = "mstc,boot";
				label = "firmware1";
				reg = <0x5a0000 0x3200000>;
				mstc,bootnum = <1>;
				mstc,persist = <&mtd_persist>;
				#address-cells = <1>;
				#size-cells = <1>;

				partition@0 {
					label-base = "ubi";
					reg = <0x0 0x3200000>;
				};
			};
			
			partition@37a0000 {
				label = "Config";
				reg = <0x37a0000 0x380000>;
				read-only;
			};
			
			partition@3b20000 {
				label = "Fwheader_2";
				reg = <0x3b20000 0x20000>;
				read-only;
			};
			
			partition@3b40000 {
				compatible = "mstc,boot";
				label = "firmware2";
				reg = <0x3b40000 0x3200000>;
				mstc,bootnum = <2>;
				mstc,persist = <&mtd_persist>;
				#address-cells = <1>;
				#size-cells = <1>;

				partition@0 {
					label-base = "ubi";
					reg = <0x0 0x3200000>;
				};
			};
			
			partition@6d40000 {
				label = "Config_2";
				reg = <0x6d40000 0x380000>;
				read-only;
			};
			
			mtd_persist: partition@70c0000 {
				label = "persist";
				reg = <0x70c0000 0x100000>;
			};
			
			partition@71c0000 {
				label = "Mrd";
				reg = <0x71c0000 0x40000>;
				read-only;
			};
			
			partition@7200000 {
				label = "Backup";
				reg = <0x7200000 0x380000>;
				read-only;
			};
		};
	};
};

&wifi {
	status = "okay";
	
	reg = <0x00 0x18000000 0x00 0x01000000>,
	<0x00 0x10003000 0x00 0x00001000>,
	<0x00 0x11d10000 0x00 0x00001000>;
	reg-names = "scpsys", "mcu", "host";
	
	pinctrl-names = "default";
	pinctrl-0 = <&wf_2g_5g_pins>;
	
	interrupts = <GIC_SPI 213 IRQ_TYPE_LEVEL_HIGH>,
	<GIC_SPI 214 IRQ_TYPE_LEVEL_HIGH>,
	<GIC_SPI 215 IRQ_TYPE_LEVEL_HIGH>,
	<GIC_SPI 216 IRQ_TYPE_LEVEL_HIGH>;
	interrupt-names = "host-event", "wm-cpu", "wa-cpu", "raw-event";
	
	memory-region = <&wmcpu_reserved>;
	resets = <&watchdog 23>;
	reset-names = "consys";
	
	nvmem-cells = <&eeprom_factory_0>;
	nvmem-cell-names = "eeprom";
	
	#address-cells = <1>;
	#size-cells = <0>;
	
	band@0 {
		reg = <0>;
		nvmem-cells = <&macaddr_factory_4>;
		nvmem-cell-names = "mac-address";
	};
	
	band@1 {
		reg = <1>;
		nvmem-cells = <&macaddr_factory_a>;
		nvmem-cell-names = "mac-address";
	};
};
