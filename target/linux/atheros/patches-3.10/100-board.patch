+static int
+ar5312_gpio_get_value(struct gpio_chip *chip, unsigned gpio)
+{
+	struct ar231x_gpio_chip *gpch =
+		container_of(chip, struct ar231x_gpio_chip, chip);
+	u32 mask = 1 << gpio;
+	u32 rett;
+	if (!(gpch->valid_mask & mask))
+		return 0;
+	rett = ar5312_gpio_get(gpch->valid_mask);
+	return !!(rett & mask);
+}
