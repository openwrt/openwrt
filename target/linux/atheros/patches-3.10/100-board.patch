+		else if (misc_intr & AR2315_ISR_UART0)
+			do_IRQ(AR531X_MISC_IRQ_UART0);
+		else if (misc_intr & AR2315_ISR_WD)
+			do_IRQ(AR531X_MISC_IRQ_WATCHDOG);
+		else
