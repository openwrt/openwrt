+static u8
+spiflash_probe(void)
+{
+	u32 reg;
+
+	reg = spiflash_wait_status();
+	reg &= ~SPI_CTL_TX_RX_CNT_MASK;
+	reg |= (1 << 4) | 4 | SPI_CTL_START;
+
+	spiflash_write_reg(SPI_FLASH_OPCODE, 0xab);
+	spiflash_write_reg(SPI_FLASH_CTL, reg);
+
+	reg = spiflash_wait_status();
+	reg = spiflash_read_reg(SPI_FLASH_DATA);
+	reg &= 0xff;
+
+	return (u8) reg;
+}
