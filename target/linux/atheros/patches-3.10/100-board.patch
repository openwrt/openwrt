+	devid = ar231x_read_reg(AR2315_SREV) & AR2315_REV_CHIP;
+	switch(devid) {
+		case 0x90:
+		case 0x91:
+			ar231x_devtype = DEV_TYPE_AR2317;
+			break;
+		default:
+			ar231x_devtype = DEV_TYPE_AR2315;
