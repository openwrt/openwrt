+static int
+ar5312_gpio_direction_input(struct gpio_chip *chip, unsigned gpio)
+{
+	struct ar231x_gpio_chip *gpch =
+		container_of(chip, struct ar231x_gpio_chip, chip);
+	u32 mask = 1 << gpio;
+	if (!(gpch->valid_mask & mask))
+		return -ENXIO;
+	ar5312_gpio_set_output(mask, 0);
+	return 0;
