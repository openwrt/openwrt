+static void
+ar5312_gpio_set_value(struct gpio_chip *chip, unsigned gpio, int value)
+{
+	struct ar231x_gpio_chip *gpch =
+		container_of(chip, struct ar231x_gpio_chip, chip);
+	u32 mask = 1 << gpio;
+	if (!(gpch->valid_mask & mask))
+		return;
+	ar5312_gpio_set(mask, (!!value) * mask);
