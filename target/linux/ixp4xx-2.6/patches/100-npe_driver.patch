+static int ix_sa_ctx_setup_cipher(struct ix_sa_ctx *sa_ctx,
+		const struct ix_cipher_algo *algo, int cipher_op, int encrypt)
+{
+	unsigned char *cinfo;
+	int keylen, init_len;
+	u32 cipher_cfg;
+	u32 keylen_cfg = 0;
+	struct ix_sa_dir *dir;
