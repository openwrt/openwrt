/dts-v1/;
#include "sf21h8898_bananapi_bpi-rv2.dtsi"

/ {
	model = "Bananapi BPI-RV2 (Booting from NAND)";
	compatible = "bananapi,bpi-rv2-nand", "siflower,sf21h8898";
};

&spi0 {
	status = "okay";
	num-cs = <2>;
	cs-gpios = <&gpio 5 GPIO_ACTIVE_LOW>, <&gpio 36 GPIO_ACTIVE_LOW>;

	flash@0 {
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <35000000>;
		spi-tx-bus-width = <2>;
		spi-rx-bus-width = <2>;
		#address-cells = <1>;
		#size-cells = <1>;

	        partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "fbl";
				reg = <0x0 0x20000>;
			};

			partition@20000 {
				label = "ubi";
				reg = <0x20000 0x0>;
				compatible = "linux,ubi";

				volumes {
					factory: ubi-volume-factory {
						volname = "factory";

						nvmem-layout {
							compatible = "fixed-layout";
							#address-cells = <1>;
							#size-cells = <1>;

							macaddr_factory_0: macaddr@0 {
								compatible = "mac-base";
								reg = <0x0 0x6>;
								#nvmem-cell-cells = <1>;
							};
						};
					};

					rootdisk: ubi-volume-fit {
						volname = "fit";
					};
				};
			};
		};
	};

	flash@1 {
		compatible = "jedec,spi-nor";
		reg = <1>;
		spi-max-frequency = <35000000>;
		spi-tx-bus-width = <2>;
		spi-rx-bus-width = <2>;

	        partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "bootloader-nor";
				reg = <0x0 0x90000>;
				read-only;
			};

			partition@90000 {
				label = "factory-nor";
				reg = <0x90000 0x10000>;
			};

			partition@a0000 {
				label = "firmware-nor";
				reg = <0xa0000 0xf60000>;
			};
		};
	};
};
