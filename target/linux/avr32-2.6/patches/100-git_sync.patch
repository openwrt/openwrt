+static void send_status(struct usba_udc *udc, struct usba_ep *ep)
+{
+	ep->state = STATUS_STAGE_IN;
+	usba_ep_writel(ep, SET_STA, USBA_BIT(TX_PK_RDY));
+	usba_ep_writel(ep, CTL_ENB, USBA_BIT(TX_COMPLETE));
+}
