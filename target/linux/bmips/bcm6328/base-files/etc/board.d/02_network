. /lib/functions/uci-defaults.sh

board_config_update

case "$(board_name)" in
comtrend,ar-5381u |\
comtrend,ar-5387un)
	ucidef_set_bridge_device switch
	ucidef_set_interface_lan "lan1 lan2 lan3 lan4"
	;;
sercomm,ad1018)
	ucidef_set_bridge_device switch
	ucidef_set_interface_lan "lan1 lan2 lan3 fibre"
	;;
esac

board_config_flush

exit 0
