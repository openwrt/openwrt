#include "bcm3380.dtsi"

/ {
	model = "Netgear CG3100D";
	compatible = "netgear,cg3100d", "brcm,bcm3380";
};

&uart0 {
	status = "okay";
};

&lsspi {
	status = "okay";
	
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_lsspi_cs3>;

	flash@0 {
		compatible = "jedec,spi-nor";
		spi-max-frequency = <1000000>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <1>;
		reg = <0>;

		#address-cells = <1>;
		#size-cells = <1>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {
				label = "stock";
				reg = <0x000000 0x800000>;
				read-only;
			};
		};
	};

	ethernet-switch@3 {
		compatible = "brcm,bcm53115";
		spi-max-frequency = <1563000>;
		reg = <3>;

		openwrt,alias = "eth0";

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				label = "lan4";
			};

			port@1 {
				reg = <1>;
				label = "lan3";
			};

			port@2 {
				reg = <2>;
				label = "lan2";
			};

			port@3 {
				reg = <3>;
				label = "lan1";
			};

			port@5 {
				reg = <5>;
				label = "cpu";

				phy-mode = "gmii";
				ethernet = <&ethernet_gmii>;

				fixed-link {
					speed = <1000>;
					full-duplex;
					asym-pause;
					pause;
				};
			};
		};
	};
};
