. /lib/functions/uci-defaults.sh

board_config_update

board=$(board_name)

case "$board" in
cznic,turris-mox)
        ucidef_set_led_heartbeat "wan" "MOX A" "mox:red:activity"
        ;;
glinet,gl-mv1000)
	ucidef_set_led_netdev "wan" "WAN" "green:wan" "wan"
	;;
esac

board_config_flush

exit 0
