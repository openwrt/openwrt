#!/bin/sh
# Copyright (C) 2014-2016 OpenWrt.org

. /lib/functions/uci-defaults.sh
. /lib/brcm2708.sh
. /lib/functions.sh
. /lib/functions/system.sh

board_config_update

board=$(brcm2708_board_name)

case "$board" in
rpi-b |\
rpi-b-plus |\
rpi-2-b |\
rpi-3-b)
	ucidef_set_interface_lan "eth0"
	;;
esac

board_config_flush

exit 0
