+STATIC int
+mini_fo_release(inode_t *inode, file_t *file)
+{
+	int err = 0;
+	file_t *hidden_file = NULL;
+
+	if (ftopd(file) != NULL) {
+		if(ftohf(file)) {
+			hidden_file = ftohf(file);
+			fput(hidden_file);
+		}
+		if(ftohf2(file)) {
+			hidden_file = ftohf2(file);
+			fput(hidden_file);
+		}
+		kfree(ftopd(file));
+	}
+	return err;
+}
