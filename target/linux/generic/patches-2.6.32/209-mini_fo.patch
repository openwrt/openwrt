+STATIC void
+mini_fo_read_inode(inode_t *inode)
+{
+	static struct address_space_operations mini_fo_empty_aops;
+
+	__itopd(inode) = kmalloc(sizeof(struct mini_fo_inode_info), GFP_KERNEL);
+	if (!itopd(inode)) {
