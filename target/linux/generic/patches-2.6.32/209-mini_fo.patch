+/* check if dentry is in an existing state */
+int is_mini_fo_existant(dentry_t *dentry)
+{
+	check_mini_fo_dentry(dentry);
+
+	if(dtost(dentry) == DELETED || dtost(dentry) == NON_EXISTANT)
+		return 0;
+	else
+		return 1;
+}
