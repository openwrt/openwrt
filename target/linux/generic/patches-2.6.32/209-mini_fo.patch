+echo -e "\nMerging all non-directory files...."
+for i in b c p f l s; do
+    find . -type $i | sed -e 's/^\.\///' | grep -v "$META_NAME" | while read FILE; do
+	pushd $BASE #&> /dev/null
+	COMMAND="cp -df $STO/$FILE $BASE/$FILE"; exec_command
+	popd &> /dev/null
+    done
+done
+popd &> /dev/null
+
+#rm $TMP/$SKIP_DEL_LIST
+
+echo "Done!"
