+
+while getopts hm:s:d: OPTS
+  do
+  case $OPTS in
+      s)  SUFF="$OPTARG";;
+      d)  STO_DIR="$OPTARG";;
+      m)  MNT_DIR="$OPTARG";;
+      h)  HELP="set";;
+      ?)  usage
