+/* check if file exists in storage  */
+int exists_in_storage(dentry_t *dentry)
+{
+	check_mini_fo_dentry(dentry);
+	if(dtost(dentry) == MODIFIED || dtost(dentry) == CREATED || dtost(dentry) == DEL_REWRITTEN)
+		return 1;
+	return 0;
