 		.name           = "RTL8226-CG 2.5Gbps PHY",
@@ -2119,6 +2196,8 @@ static struct phy_driver realtek_drvs[]
 		.read_status    = rtl822xb_c45_read_status,
 		.suspend        = genphy_c45_pma_suspend,
 		.resume         = rtlgen_c45_resume,
