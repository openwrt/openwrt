#include "vr9_avm_fritzxx90.dtsi"

/ {
	compatible = "avm,fritz5490", "lantiq,xway", "lantiq,vr9";
	model = "AVM FRITZ!Box 5490";

	memory@0 {
		device_type = "memory";
		reg = <0x0 0x20000000>;
	};
};

&eth0 {
	mtd-mac-address = <&urlader 0xcc>;
	mtd-mac-address-increment = <1>;
};

&gswip_mdio {
	phy0: ethernet-phy@0 {
		status = "disabled";
	};

	phy1: ethernet-phy@1 {
		status = "disabled";
	};

	phy5: ethernet-phy@5 {
		reg = <0x05>;
	};

	phy6: ethernet-phy@6 {
		reg = <0x06>;
		reset-gpios = <&gpio 32 GPIO_ACTIVE_LOW>;
	};

	phy9: ethernet-phy@9 {
		reg = <0x09>;
	};

	phy11: ethernet-phy@11 {
		status = "disabled";
	};

	phy13: ethernet-phy@13 {
		status = "disabled";
	};
};

&gswip_ports {
	port@0 {
		reg = <0>;
		label = "wan";
		phy-mode = "rgmii-rxid";
		phy-handle = <&phy6>;
	};

	port@1 {
		reg = <1>;
		label = "lan3";
		phy-mode = "rgmii";

		fixed-link {
			speed = <1000>;
			full-duplex;
		};
	};

	port@2 {
		reg = <2>;
		label = "lan2";
		phy-mode = "internal";
		phy-handle = <&phy5>;
	};

	port@4 {
		reg = <4>;
		label = "lan1";
		phy-mode = "internal";
		phy-handle = <&phy9>;
	};
};
