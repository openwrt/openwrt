+			/* check if the descriptor length is changed */
+			if (lq_r32(LQ_DMA_CDLEN) != pCh->desc_len)
+				lq_w32(pCh->desc_len, LQ_DMA_CDLEN);
+
+			lq_w32(lq_r32(LQ_DMA_CCTRL) & ~1, LQ_DMA_CCTRL);
+			lq_w32(lq_r32(LQ_DMA_CCTRL) | 2, LQ_DMA_CCTRL);
