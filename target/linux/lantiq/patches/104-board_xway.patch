+
+	tmp = lq_r32(LQ_DMA_IRNEN);
+	lq_w32(0, LQ_DMA_IRNEN);
+	g_lq_dma_int_status |= 1 << chan_no;
+	lq_w32(tmp, LQ_DMA_IRNEN);
+	lq_mask_and_ack_irq(irq);
+
+	if (!g_lq_dma_in_process) {
