+	{
+		for(addr2 = addr1; addr2 < addr1+4; addr2++)
+			*addr2=0x00000000;
+	}
+	IFX_PRINT("Clearning SPRAM: 0x%8X-0x%8X Done\n", (uint32_t)start_addr,(uint32_t)end_addr);
