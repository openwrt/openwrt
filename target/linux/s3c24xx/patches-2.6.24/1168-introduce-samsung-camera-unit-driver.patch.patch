+		cmd &= ~(BIT14|BIT15); /* Clear FLIP Mode */
+		cmd |= cfg->flip; 
+		CICOTRGFMT = cmd;
+	} 
+	else {
+		cmd  = CIPRTRGFMT;
+		cmd &= ~(BIT14|BIT15);
+		cmd |= cfg->flip;
+		CICOTRGFMT = cmd; 
+	}
