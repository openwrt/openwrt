+			cfg->exec = CAMIF_DMA_OFF;
+			cfg->status = CAMIF_INT_HAPPEN;
+			camif_capture_stop(cfg);
+			cfg->fsm = CAMIF_Znd_INT;
+			ret = INSTANT_GO;
+			DPRINTK(KERN_INFO "Ynd INT \n");
+			break;
+		case CAMIF_Znd_INT: 		/*  LAST IRQ (Dummy IRQ */
+			cfg->fsm = CAMIF_DUMMY_INT;
+			cfg->status = CAMIF_INT_HAPPEN;
+			ret = INSTANT_GO;
