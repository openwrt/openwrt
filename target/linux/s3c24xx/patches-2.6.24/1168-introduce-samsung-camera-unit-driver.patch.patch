+/******************************************************
+ CalculateBurstSize - Calculate the busrt lengths
+ Description:
+ - dstHSize: the number of the byte of H Size.
+********************************************************/
+static void camif_g_bsize(u32 hsize, u32 *mburst, u32 *rburst)
+{
+	u32 tmp;
+
+	tmp = (hsize/4) % 16;
+	switch(tmp) {
+		case 0:
+			*mburst=16;
+			*rburst=16;
+			break;
+		case 4:
+			*mburst=16;
+			*rburst=4;
+			break;
+		case 8:
+			*mburst=16;
+			*rburst=8;
+			break;
+		default:
+			tmp=(hsize/4)%8;
+			switch(tmp) {
+				case 0:
+					*mburst=8;
+					*rburst=8;
+					break;
+				case 4:
+					*mburst=8;
+					*rburst=4;
+				default:
+					*mburst=4;
+					tmp=(hsize/4)%4;
+					*rburst= (tmp) ? tmp: 4;
+					break;
+			}
+			break;
+	}
+}
