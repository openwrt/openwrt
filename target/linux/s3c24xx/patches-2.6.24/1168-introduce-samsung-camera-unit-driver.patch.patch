+/* 
+   Reset Camera IP in CPU
+   Reset External Sensor 
+ */
+void camif_reset(int is, int delay)
+{
+	switch (is) {
+		case CAMIF_RESET:
+			CIGCTRL |= GC_SWRST;
+			mdelay(1);
+			CIGCTRL &= ~GC_SWRST;
+			break;
+		case CAMIF_EX_RESET_AH: /*Active High */
+			CIGCTRL &= ~GC_CAMRST; 
+			udelay(200);
+			CIGCTRL |= GC_CAMRST;
+			udelay(delay);
+			CIGCTRL &= ~GC_CAMRST;
+			break;
+		case CAMIF_EX_RESET_AL:	/*Active Low */
+			CIGCTRL |=  GC_CAMRST;
+			udelay(200);
+			CIGCTRL &= ~GC_CAMRST;
+			udelay(delay);
+			CIGCTRL |= GC_CAMRST;
+			break;
+		default:
+			break;
+	}
+}
