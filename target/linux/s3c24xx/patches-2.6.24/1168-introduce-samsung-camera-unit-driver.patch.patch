+#define fTARGET_VSIZE       Fld(13,0)
+#define TARGET_VSIZE(x)     FInsrt((x), fTARGET_VSIZE)
+#define FLIP_X_MIRROR       BIT14           
+#define FLIP_Y_MIRROR       BIT15           
