+	struct video_device *vfl;
+	struct file_operations *old_fops;
+	
+	down(&videodev_lock);
+
+	vfl = get_vd(minor);
+
+	old_fops = file->f_op;
+	file->f_op = fops_get(vfl->fops);
+	if(file->f_op->open)
+		err = file->f_op->open(inode,file);
+	if (err) {
+		fops_put(file->f_op);
+		file->f_op = fops_get(old_fops);
