+#define VSYNC_B             BIT19
+
+/* Image Capture Enable Regiser */
+#define	CAMIF_CAP_ON         BIT31
+#define CAMIF_CAP_CODEC_ON   BIT30
+#define CAMIF_CAP_PREVIEW_ON BIT29
+
+
