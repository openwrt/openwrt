+int video_register_device(struct video_device *vfd, int type, int nr)
+{
+	int ret=0;
+
+	/* pick a minor number */
+	down(&videodev_lock);
+	set_vd (vfd, nr);
+	vfd->minor=nr;
+	up(&videodev_lock);
