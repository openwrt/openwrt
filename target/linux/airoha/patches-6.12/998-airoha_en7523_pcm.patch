+static void en7523_afe_pcm_dev_remove(struct platform_device *pdev)
+{
+	pm_runtime_disable(&pdev->dev);
+	if (!pm_runtime_status_suspended(&pdev->dev))
+		en7523_afe_runtime_suspend(&pdev->dev);
+}
