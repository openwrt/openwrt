+static int en7523_dai_memif_register(struct mtk_base_afe *afe)
+{
+	struct mtk_base_afe_dai *dai;
+	dai = devm_kzalloc(afe->dev, sizeof(*dai), GFP_KERNEL);
+	if (!dai)
+		return -ENOMEM;
+
+	list_add(&dai->list, &afe->sub_dais);
+	dai->dai_drivers = en7523_memif_dai_driver;
+	dai->num_dai_drivers = ARRAY_SIZE(en7523_memif_dai_driver);
+	return 0;
+}
