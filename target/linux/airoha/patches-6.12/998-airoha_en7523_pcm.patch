+/*
+ * en7523-reg.h  --  Airoha EN7523 audio driver reg definition
+ */
+
+#ifndef _EN7523_REG_H_
+#define _EN7523_REG_H_
+
+/* Base definitions based on legacy i2s-reg.h */
+
+#define AFE_DAC_CON0			0x000
+#define  AFE_DAC_CON0_AFE_ON		BIT(0)
+#define  AFE_DAC_CON0_UL1_ON		BIT(1)
+#define  AFE_DAC_CON0_DL1_ON		BIT(17)
+
+#define ETDM_IN1_CON0			0x05c
+#define ETDM_OUT1_CON0			0x07c
+
+/* DL1 (Playback) Registers */
+#define AFE_DL1_BASE			0x0a8
+#define AFE_DL1_CUR			0x0ac
+#define AFE_DL1_END			0x0b0
+#define AFE_DL1_CON0			0x0b4
+
+/* UL1 (Capture) Registers */
+#define AFE_UL1_BASE			0x0c4
+#define AFE_UL1_END			0x0c8
+#define AFE_UL1_CUR			0x0cc
+#define AFE_UL1_CON0			0x0d0
+
+/* IRQ Registers */
+/* AFE_IRQ_CON0 controls IRQ for Record (UL1) in legacy */
+#define AFE_IRQ_CON0			0x0e4
+#define AFE_IRQ_CNT			0x0e8
+
+#define AFE_IRQ_STS			0x0f8
+/* Note: Legacy defines IRQ_PLAY_MASK as 0x1 and IRQ_RECORD_MASK as 0x2 */
+#define  AFE_IRQ_STS_PLAY		BIT(0)
+#define  AFE_IRQ_STS_RECORD		BIT(1)
+
+/* AFE_IRQ1_CON0 controls IRQ for Playback (DL1) in legacy */
+/* In legacy this was BASE2 + 0x100, assuming single regmap space now */
+#define AFE_IRQ1_CON0			0x100
+#define AFE_IRQ1_CNT			0x104
+
+#define AFE_MAX_REGISTER		0x110 // Covering up to IRQ1_MON1
+
+#endif
