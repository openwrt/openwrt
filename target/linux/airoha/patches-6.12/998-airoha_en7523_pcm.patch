+static int en7523_afe_pcm_dev_probe(struct platform_device *pdev)
+{
+	struct mtk_base_afe *afe;
+	struct en7523_afe_private *afe_priv;
+	struct device *dev = &pdev->dev;
+	struct resource *res;
+	int i, irq_id, ret;
+
+	afe = devm_kzalloc(dev, sizeof(*afe), GFP_KERNEL);
+	if (!afe)
+		return -ENOMEM;
+	platform_set_drvdata(pdev, afe);
+
+	afe->platform_priv = devm_kzalloc(dev, sizeof(*afe_priv), GFP_KERNEL);
+	if (!afe->platform_priv)
+		return -ENOMEM;
+	afe_priv = afe->platform_priv;
+	afe->dev = dev;
+
+	/* Map Base 1 (Legacy: ecnt_i2s->base1) */
+	afe->base_addr = devm_platform_ioremap_resource(pdev, 0);
+	if (IS_ERR(afe->base_addr))
+		return PTR_ERR(afe->base_addr);
+
+	/* Map Base 2 (Legacy: ecnt_i2s->base2) */
+	res = platform_get_resource(pdev, IORESOURCE_MEM, 1);
+	afe_priv->base2 = devm_ioremap_resource(dev, res);
+	if (IS_ERR(afe_priv->base2))
+		return PTR_ERR(afe_priv->base2);
+
+	ret = devm_pm_runtime_enable(dev);
+	if (ret)
+		return ret;
+
+	pm_runtime_get_sync(dev);
+
+	/* Initialize Regmap with Custom Callbacks */
+	afe->regmap =
+		devm_regmap_init(dev, NULL, afe, &en7523_afe_regmap_config);
+
+	pm_runtime_put_sync(dev);
+	if (IS_ERR(afe->regmap))
+		return PTR_ERR(afe->regmap);
+
+	mutex_init(&afe->irq_alloc_lock);
+
+	/* Initialize IRQ */
+	afe->irqs_size = EN7523_IRQ_NUM;
+	afe->irqs = devm_kcalloc(dev, afe->irqs_size, sizeof(*afe->irqs),
+				 GFP_KERNEL);
+	if (!afe->irqs)
+		return -ENOMEM;
+
+	for (i = 0; i < afe->irqs_size; i++)
+		afe->irqs[i].irq_data = &irq_data[i];
+
+	irq_id = platform_get_irq(pdev, 0);
+	if (irq_id < 0)
+		return irq_id;
+
+	ret = devm_request_irq(dev, irq_id, en7523_afe_irq_handler,
+			       IRQF_TRIGGER_NONE, "en7523-afe", (void *)afe);
+	if (ret)
+		return dev_err_probe(dev, ret, "Failed to request irq\n");
+
+	/* Initialize Memif */
+	afe->memif_size = EN7523_MEMIF_NUM;
+	afe->memif = devm_kcalloc(dev, afe->memif_size, sizeof(*afe->memif),
+				  GFP_KERNEL);
+	if (!afe->memif)
+		return -ENOMEM;
+
+	for (i = 0; i < afe->memif_size; i++) {
+		int sel_irq = en7523_memif_specified_irqs[i];
+		afe->memif[i].data = &memif_data[i];
+		afe->memif[i].irq_usage = sel_irq;
+		afe->memif[i].const_irq = 1;
+		afe->irqs[sel_irq].irq_occupyed = true;
+	}
+
+	INIT_LIST_HEAD(&afe->sub_dais);
+	for (i = 0; i < ARRAY_SIZE(dai_register_cbs); i++) {
+		ret = dai_register_cbs[i](afe);
+		if (ret)
+			return dev_err_probe(dev, ret, "DAI register failed\n");
+	}
+
+	ret = mtk_afe_combine_sub_dai(afe);
+	if (ret)
+		return dev_err_probe(dev, ret,
+				     "mtk_afe_combine_sub_dai fail\n");
+
+	afe->mtk_afe_hardware = &en7523_afe_hardware;
+	afe->memif_fs = en7523_memif_fs;
+	afe->irq_fs = en7523_irq_fs;
+	afe->runtime_resume = en7523_afe_runtime_resume;
+	afe->runtime_suspend = en7523_afe_runtime_suspend;
+
+	ret = devm_snd_soc_register_component(dev, &mtk_afe_pcm_platform, NULL,
+					      0);
+	if (ret)
+		return dev_err_probe(dev, ret,
+				     "Cannot register AFE component\n");
+
+	ret = devm_snd_soc_register_component(afe->dev,
+					      &en7523_afe_pcm_dai_component,
+					      afe->dai_drivers,
+					      afe->num_dai_drivers);
+	if (ret)
+		return dev_err_probe(dev, ret,
+				     "Cannot register PCM DAI component\n");
+
+	return 0;
+}
