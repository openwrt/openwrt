+// SPDX-License-Identifier: GPL-2.0
+/*
+ * Airoha ALSA SoC I2S platform driver for EN7523
+ */
+
+#include <linux/module.h>
+#include <sound/soc.h>
+
+#include "en7523-afe-common.h"
+
+SND_SOC_DAILINK_DEFS(playback,
+		     DAILINK_COMP_ARRAY(COMP_CPU("DL1")),
+		     DAILINK_COMP_ARRAY(COMP_DUMMY()),
+		     DAILINK_COMP_ARRAY(COMP_EMPTY()));
+
+SND_SOC_DAILINK_DEFS(capture,
+		     DAILINK_COMP_ARRAY(COMP_CPU("UL1")),
+		     DAILINK_COMP_ARRAY(COMP_DUMMY()),
+		     DAILINK_COMP_ARRAY(COMP_EMPTY()));
+
+static struct snd_soc_dai_link en7523_i2s_dai_links[] = {
+	{
+		.name = "en7523-i2s-playback",
+		.stream_name = "en7523-i2s-playback",
+		.trigger = {SND_SOC_DPCM_TRIGGER_POST,
+			    SND_SOC_DPCM_TRIGGER_POST},
+		.dynamic = 0,
+		.playback_only = 1,
+		SND_SOC_DAILINK_REG(playback),
+	},
+	{
+		.name = "en7523-i2s-capture",
+		.stream_name = "en7523-i2s-capture",
+		.trigger = {SND_SOC_DPCM_TRIGGER_POST,
+			    SND_SOC_DPCM_TRIGGER_POST},
+		.dynamic = 0,
+		.capture_only = 1,
+		SND_SOC_DAILINK_REG(capture),
+	},
+};
+
+static struct snd_soc_card en7523_i2s_card = {
+	.name = "en7523-i2s",
+	.owner = THIS_MODULE,
+	.dai_link = en7523_i2s_dai_links,
+	.num_links = ARRAY_SIZE(en7523_i2s_dai_links),
+};
+
+static int en7523_i2s_machine_probe(struct platform_device *pdev)
+{
+	struct snd_soc_card *card = &en7523_i2s_card;
+	struct device_node *platform_dai_node;
+	struct snd_soc_dai_link *dai_link;
+	struct device_node *platform;
+	int ret, i;
+
+	card->dev = &pdev->dev;
+
+	platform = of_get_child_by_name(pdev->dev.of_node, "platform");
+
+	if (platform) {
+		platform_dai_node = of_parse_phandle(platform, "sound-dai", 0);
+		of_node_put(platform);
+
+		if (!platform_dai_node) {
+			dev_err(&pdev->dev, "Failed to parse platform/sound-dai property\n");
+			return -EINVAL;
+		}
+	} else {
+		dev_err(&pdev->dev, "Property 'platform' missing or invalid\n");
+		return -EINVAL;
+	}
+
+	for_each_card_prelinks(card, i, dai_link) {
+		if (dai_link->platforms->name)
+			continue;
+		dai_link->platforms->of_node = platform_dai_node;
+	}
+
+	ret = devm_snd_soc_register_card(&pdev->dev, card);
+	if (ret) {
+		dev_err_probe(&pdev->dev, ret, "%s snd_soc_register_card fail\n", __func__);
+		goto err_of_node_put;
+	}
+
+	return 0;
+
+err_of_node_put:
+	of_node_put(platform_dai_node);
+	return ret;
+}
+
+static const struct of_device_id en7523_i2s_machine_dt_match[] = {
+	{ .compatible = "airoha,en7523-i2s" },
+	{ /* sentinel */ }
+};
+MODULE_DEVICE_TABLE(of, en7523_i2s_machine_dt_match);
+
+static struct platform_driver en7523_i2s_driver = {
+	.driver = {
+		   .name = "en7523-i2s",
+		   .of_match_table = en7523_i2s_machine_dt_match,
+	},
+	.probe = en7523_i2s_machine_probe,
+};
+module_platform_driver(en7523_i2s_driver);
+
+MODULE_DESCRIPTION("Airoha SoC I2S platform driver for ALSA EN7523");
+MODULE_LICENSE("GPL");
