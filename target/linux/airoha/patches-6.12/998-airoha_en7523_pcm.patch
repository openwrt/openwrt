+/* * Custom Regmap Callbacks to handle Split Base Addresses
+ * Simulates legacy logic: if offset < 0x100 use Base1, else use Base2.
+ */
+static int en7523_reg_read(void *context, unsigned int reg, unsigned int *val)
+{
+	struct mtk_base_afe *afe = context;
+	struct en7523_afe_private *priv = afe->platform_priv;
+
+	if (reg < 0x100)
+		*val = readl(afe->base_addr + reg);
+	else
+		*val = readl(priv->base2 + reg);
+
+	return 0;
+}
+
+static int en7523_reg_write(void *context, unsigned int reg, unsigned int val)
+{
+	struct mtk_base_afe *afe = context;
+	struct en7523_afe_private *priv = afe->platform_priv;
+
+	if (reg < 0x100)
+		writel(val, afe->base_addr + reg);
+	else
+		writel(val, priv->base2 + reg);
+
+	return 0;
+}
+
+static const struct regmap_config en7523_afe_regmap_config = {
+	.reg_bits = 32,
+	.reg_stride = 4,
+	.val_bits = 32,
+	.max_register = AFE_MAX_REGISTER,
+	.reg_read = en7523_reg_read,
+	.reg_write = en7523_reg_write,
+};
+
+static irqreturn_t en7523_afe_irq_handler(int irq_id, void *dev)
+{
+	struct mtk_base_afe *afe = dev;
+	struct mtk_base_afe_irq *irq;
+	u32 status;
+	u32 reg;
+	int i;
+
+	/* This will go through en7523_reg_read using Base1 */
+	regmap_read(afe->regmap, AFE_IRQ_STS, &status);
+
+	if (status & AFE_IRQ_STS_RECORD)
+		reg = AFE_IRQ_CON0;
+	else if (status & AFE_IRQ_STS_PLAY)
+		reg = AFE_IRQ1_CON0;
+	else
+		return IRQ_NONE;
+
+	/* Clear Interrupts - Uses custom write callback */
+	regmap_update_bits(afe->regmap, reg, BIT(2) | BIT(3), BIT(2) | BIT(3));
+	regmap_update_bits(afe->regmap, reg, BIT(2) | BIT(3), 0);
+
+	for (i = 0; i < EN7523_MEMIF_NUM; i++) {
+		struct mtk_base_afe_memif *memif = &afe->memif[i];
+		if (!memif->substream || memif->irq_usage < 0)
+			continue;
+
+		irq = &afe->irqs[memif->irq_usage];
+
+		if (irq_id == EN7523_IRQ_DL1 && (status & AFE_IRQ_STS_PLAY))
+			snd_pcm_period_elapsed(memif->substream);
+		else if (irq_id == EN7523_IRQ_UL1 &&
+			 (status & AFE_IRQ_STS_RECORD))
+			snd_pcm_period_elapsed(memif->substream);
+	}
+	return IRQ_HANDLED;
+}
