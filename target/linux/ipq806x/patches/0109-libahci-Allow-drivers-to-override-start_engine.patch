+	struct ahci_host_priv *hpriv = ap->host->private_data;
 	bool online;
 	int rc;
 
@@ -616,7 +617,7 @@ static int ahci_vt8251_hardreset(struct
 	rc = sata_link_hardreset(link, sata_ehc_deb_timing(&link->eh_context),
