+static int ac108_multi_write(u8 reg, u8 val, struct ac10x_priv *ac10x)
+{
+	u8 i;
+	for (i = 0; i < ac10x->codec_cnt; i++)
+		ac10x_write(reg, val, ac10x->i2cmap[i]);
+	return 0;
+}
