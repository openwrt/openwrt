+static int ac108_multi_update_bits(u8 reg, u8 mask, u8 val, struct ac10x_priv *ac10x)
+{
+	int r = 0;
+	u8 i;
+	for (i = 0; i < ac10x->codec_cnt; i++)
+		r |= ac10x_update_bits(reg, mask, val, ac10x->i2cmap[i]);
+	return r;
+}
