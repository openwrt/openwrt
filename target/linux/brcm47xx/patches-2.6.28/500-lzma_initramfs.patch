+		panic( KERN_ERR "initramfs: Lzma decode failure\n");
+		return -1;
+	}
+
+	flush_buffer(outputbuffer, outsizeProcessed);
+	inptr = insize;
+
+	vfree(outputbuffer);
+	vfree(workspace);
+	state = Reset;
+	return 0;
+}
