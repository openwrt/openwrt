+			break;
+		case 116:
+		case 117:
+		case 118:
+		case 38:
+		case 39:
+		case 40:
+		case 41:
+			bit_num = 3;
+			break;
+		case 42:
+		case 43:
+			bit_num = 4;
+			break;
+		case 48:
+			bit_num = 7;
+			break;
+		case 55:
+			bit_num = 12;
+			revert = 1;
+			break;
+		case 54:
+			bit_num = 13;
+			revert = 1;
+			break;
+		case 53:
+			bit_num = 14;
