+	* reboot. By using BOOT_KBD we ensure proper system reboot as
+	* expected.
+	*/
+	reboot_type = BOOT_KBD;
+
+	pm_power_off = ce2600_power_off;
+
+#ifdef CONFIG_SERIAL_8250
+	/* fix the Serial port so the IOAPIC doesn't hang! */
+	serial_fixup();
+#endif
