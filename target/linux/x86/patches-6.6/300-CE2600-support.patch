+			    unsigned int devfn, int reg, int len, u32 *value)
+{
+	unsigned long flags, usb_number = 0;
+	u32 id = 0;
+	unsigned int dev;
+	unsigned int func;
+	u32 av_bridge_base;
+	u32 av_bridge_limit;
+	int retval;
+	sim_reg_t *sim_reg = NULL;
+	int simulated_read;
+
+	dev = PCI_SLOT(devfn);
+	func = PCI_FUNC(devfn);
