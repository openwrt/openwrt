+	default:
+		sim_reg = get_sim_reg_ce2600(bus, devfn, reg, len);
+		usb_number = 3;
+		break;
+	}
+
+	if (sim_reg != NULL) {
+		raw_spin_lock_irqsave(&pci_config_lock, flags);
+		*value = sim_reg->value;
+		raw_spin_unlock_irqrestore(&pci_config_lock, flags);
+
