+static void ce2600_reset(struct pci_dev *dev)
+{
+	int i;
+	/*
+	 * Intel CE2600 SoC uses this specific method to reboot.
+	 */
+	for (i = 0; i < 10; i++) {
+		outb(0x8, 0xcf9);
+		udelay(50);
+	}
