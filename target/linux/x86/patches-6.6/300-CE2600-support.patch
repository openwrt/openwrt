+	uint32_t remain = len;
+	uint32_t finished = 0;
+	u_char * src = (u_char *)buf;
+
+	int limit = 0;
+	int count =0;
+
+	/* Sanity checks */
+	if (!len)
+		return 0;
+
+	if (dev->mode & SPI_MODE_QUAD_IO)
